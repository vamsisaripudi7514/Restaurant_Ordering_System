@{
    Layout = "~/Views/Admin/AdminDashboard.cshtml";
}

<body>

    <h1>@ViewData["Title"]</h1>
    <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
        <div class="container">
            <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="#" onclick="fetchPendingPayments()" class="nav-link">
                            PENDING PAYMENTS
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="#" onclick="fetchPaidPayments()" class="nav-link">
                            PAYMENT HISTORY
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="content">

        <div id="pending-payments">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">PENDING PAYMENTS</h3>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="pending-payments-table">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Customer Mail</th>
                            <th>Total Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>  </tbody>
                </table>
            </div>

        </div>

        <div id="paid-payments" style="display: none;">

            <div class="card-header">
                <h3 class="card-title">PAYMENT HISTORY</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="paid-payments-table">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Customer Mail</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>  </tbody>
                </table>
            </div>

        </div>

    </div>
    <script src="~/js/admin-payments.js"></script>
</body>
