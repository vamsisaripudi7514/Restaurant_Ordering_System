    <script src="~/AdminLTE/js/adminlte.min.js"></script>
    <!-- Include Bootstrap -->
    <script src="~/AdminLTE/js/popper.min.js"></script>
    <!-- Include AdminLTE JS -->
    <script src="~/AdminLTE/js/adminlte.js"></script>
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE/plugins/sweetalert2/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="~/AdminLTE/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    
</head>
<body>
<nav class="main-header navbar navbar-expand-md navbar-light navbar-white container-fluid">
    <div class="container">
        <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse order-3" id="navbarCollapse">
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-inline-block">
                    Home
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    Contact
                </li>
            </ul>
        </div>
</nav>


<div class="card card-primary" style="max-width:50%;margin:0 auto">
            <div class="card-header">
   <h3 class="card-title"style="align-content:center">Customer Data</h3>
</div>
<form id="user-info-form" method="post">
<div class="card-body">
   <div class="form-group">
       <label for="Customer_Name">Full Name</label>
       <input type="text" class="form-control" id="Customer_Name" placeholder="Enter FullName">
   </div>
   <div class="form-group">
       <label for="Customer_Mail">Email address</label>
       <input type="email" class="form-control" id="Customer_Mail" placeholder="Enter email">
   </div>
   <div class="form-group">
       <label for="Customer_Phone">Mobile Number</label>
       <input type="text" class="form-control" id="Customer_Phone" placeholder="Enter Mobile Number">
   </div>
</div>

               <div class="card-footer">
            <button type="submit" class="btn btn-primary" >Submit</button>
               </div>

 </form>
</div>
    <script src="~/js/customer-login.js"></script>
</body>

</html>